{% extends 'base.html.twig' %}
{% block body %}
    <div class = "jumbotron">
        <div class = "container">
            <div class="row">
            <div class= "col-md-8">
            </div> 
            <div class= "col-md-4">
                <h1>{{properties.title}}<h1>
                <h2>{{properties.rooms}}m²<h2>
                <div class="text-primary" style="font-weight: bold; font-size: 2rem;"> 
                {{properties.formattedPrice}} $ 
                </div>
                <a href="#" class="btn btn-primary"> Contacter l'agence </a>
            </div> 
        </div>
        </div>
    </div>
    <div class="container mt-4"> 
        <p>
            {{properties.description | nl2br}}
        </p>

        <div class="row">
            <div class= "col-md-8">
            <h2> Caractéristique </h2>
                <table class="table table-striped">
                    <tr>
                        <td> Surface habitable </td>
                        <td> {{properties.Surface}} m²</td>
                    </tr>
                    <tr>
                        <td> Pièce </td>
                        <td> {{properties.rooms}}</td>
                    </tr>
                    <tr>
                        <td> Chambre </td>
                        <td> {{properties.bedrooms}}</td>
                    </tr>
                    <tr>
                        <td> Etage </td>
                        <td> {{properties.floor}}</td>
                    </tr>
                    <tr>
                        <td> Chauffage </td>
                        <td> {{properties.heatType}} </td>
                    </tr>
                </table>    
            </div> 
            <div class= "col-md-4">
            <h2>Spécificités</h2>
            </div> 
        </div>
    </div>
{% endblock %}